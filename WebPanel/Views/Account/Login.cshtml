@model Domain.DTO.Account.Login.LoginDTO
@{
    Layout = "~/Views/Shared/_accountLayout.cshtml";
}

<form method="post" asp-action="Login">

    <div asp-validation-summary="All" class="text-danger"></div>
    <input type="hidden" asp-for="ReturnUrl" />
    <div class="form-group">
        <input asp-for="Username" placeholder="نام کاربری" />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>
    <div class="form-group">

        <input asp-for="Password" placeholder="رمز عبور" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="RememberMe">مرا به خاطر بسپار</label>
        <input type="checkbox" asp-for="RememberMe" />
    </div>

    <button type="submit" class="btn btn-success">ورود</button>

</form>
